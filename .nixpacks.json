{
  "phases": {
    "install": {
      "cmds": [
        "mkdir -p bootstrap/cache storage/framework/{sessions,views,cache}",
        "npm ci",
        "composer install --no-dev --optimize-autoloader --no-scripts"
      ]
    },
    "build": {
      "cmds": [
        "npm run build"
      ]
    }
  },
  "start": {
    "cmd": "php -S 0.0.0.0:$PORT -t public"
  }
}